<Window x:Class="ProjektV.ImageEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektV"
        mc:Ignorable="d"
        Title="Výpočet hustoty krevního řečiště" Height="700" Width="800">
    <Window.Resources>
        <Style x:Key="RoundButton" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.5" Color="#007ACC"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Canvas x:Name="mainCanvas" Margin="10,44,223,10">
            <Viewbox x:Name="imageVb" Width="513" Height="512" Canvas.Left="10">
                <Image x:Name="img1" Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Viewbox>
        </Canvas>
        <Label x:Name="lblResult" Content="Hustota krevního řečiště: 19.58%" Margin="10,10,201,10" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14"/>
        <Button Content="Potvrdit selekci" Width="150" Height="60" Margin="620,55,0,0" FontSize="14" Style="{StaticResource RoundButton}" FontFamily="Arial" Click="Confirm_button_click"/>
        <Button Content="Zrušit selekci" Width="150" Height="60" Margin="620,135,0,0" FontSize="14" Style="{StaticResource RoundButton}" FontFamily="Arial" Click="Remove_selection_click"/>
        <Button Content="Vypočítat hustotu" Width="150" Height="60" Margin="620,215,0,0" FontSize="14" Style="{StaticResource RoundButton}" FontFamily="Arial" Click="Density_calculation_click"/>
        <Button Content="Exportovat" Width="150" Height="60" Margin="620,295,0,0" FontSize="14" Style="{StaticResource RoundButton}" FontFamily="Arial" Click="Export_button_click"/>
        <Label Content="Velikost selekce:" HorizontalAlignment="Left" Margin="620,374,0,0" VerticalAlignment="Top" Height="47" Width="150" FontSize="14"/>
        <Button Content="+" Width="54" Height="30" Margin="624,414,0,0" FontSize="14" Style="{StaticResource RoundButton}" FontFamily="Arial"/>
        <Button Content="-" Width="54" Height="30" Margin="716,414,0,0" FontSize="14" Style="{StaticResource RoundButton}" FontFamily="Arial"/>
        <Button Content="Exportovat2" Width="150" Height="60" Margin="620,494,0,0" FontSize="14" Style="{StaticResource RoundButton}" FontFamily="Arial" Click="Button_Click"/>
    </Grid>
</Window>